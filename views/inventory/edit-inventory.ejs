<h1><%- title %></h1>
<%- messages() %>
<% if (errors) { %>
    <ul class="notice">
   <% errors.array().forEach(error => { %>
    <% if (error.msg !== "Invalid value") { %> <!-- âœ… Skip generic messages --> 
     <li><%= error.msg %></li>
     <% } %>
  <%  }) %>
   </ul>
  <% } %>
<div id="inventory-form">
    <p><em>FIELD IS REQUIRED</em></p>
    <form id="updateForm" action="/inv/update" method="post">
        <!-- Classification select sholud be made dynamically in utils -->
         <%- classificationSelect %>
        <label for="inv_make"><br><br>Make</label>
        <input type="text" id="inv_make" name="inv_make" placeholder="Min of 3 characters" required pattern="^[a-zA-Z0-9]{3,}$">
        <label for="inv_model">Model</label>
        <input type="text" id="inv_model" name="inv_model" placeholder="Min of 3 characters" required pattern="^[a-zA-Z0-9]{3,}$">
        <label for="inv_description">Description</label>
        <textarea id="inv_description" name="inv_description"></textarea>
        <label for="inv_image">Image Path</label>
        <input type="text" id="inv_image" name="inv_image" value="/images/vehicles/no-image.png" required>
        <label for="inv_thumbnail">Thumbnail Path</label>
        <input type="text" id="inv_thumbnail" name="inv_thumbnail" value="/images/vehicles/no-image.png" required>
        <label for="inv_price">Price</label>
        <input type="number" id="inv_price" name="inv_price" placeholder="decimal or integer" required>
        <label for="inv_year">Year</label>
        <input type="text" id="inv_year" name="inv_year" placeholder="4-digit year" required pattern="^\d{4}$">
        <label for="inv_miles">Miles</label>
        <input type="number" id="inv_miles" name="inv_miles" placeholder="digits only" required>
        <label for="inv_color">Color</label>
        <input type="text" id="inv_color" name="inv_color" required>
        <input type="submit" id="inventory_submit" value="Modify Inventory">
        <input type="hidden" name="inv_id"
        <% if(locals.inv_id) { %> value="<%= locals.inv_id %>"
        <% } %>>
    </form>
</div>

<script src="../../js/inv-update.js"></script>