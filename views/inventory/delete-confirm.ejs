<h1><%- title %></h1>
<%- messages() %>
<% if (errors) { %>
    <ul class="notice">
   <% errors.array().forEach(error => { %>
    <% if (error.msg !== "Invalid value") { %> <!-- âœ… Skip generic messages --> 
     <li><%= error.msg %></li>
     <% } %>
  <%  }) %>
   </ul>
  <% } %>
<div id="inventory-form">
    <p id="confirm-delete-message"><em>Confirm Deletion - The delete is permanent</em></p>
    <form id="deleteForm" action="/inv/delete" method="post">
        <label for="inv_make"><br><br>Make</label>
        <input type="text" id="inv_make" name="inv_make" value="<%= locals.inv_make %>" readonly>
        <label for="inv_model">Model</label>
        <input type="text" id="inv_model" name="inv_model" value="<%= locals.inv_model %>" readonly>
        <label for="inv_price">Price</label>
        <input type="number" id="inv_price" name="inv_price" value="<%= locals.inv_price %>" readonly>
        <label for="inv_year">Year</label>
        <input type="text" id="inv_year" name="inv_year" value="<%= locals.inv_year %>" readonly>
        <input type="submit" id="inventory_delete" value="DELETE">
        <input type="hidden" name="inv_id"
        <% if(locals.inv_id) { %> value="<%= locals.inv_id %>"
        <% } %>>
    </form>
</div>

